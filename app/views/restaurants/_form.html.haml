= simple_nested_form_for @restaurant do |f|
  = f.input :name
  = f.input :cuisine
  = f.input :location

  %h3 Add Photos of restaurant
  = f.simple_fields_for :assets do |asset|
    = asset.input :avatar, as: :file
    = asset.link_to_remove "Remove", class: 'btn btn-danger'
  = f.link_to_add "Add", :assets, class: 'btn btn-primary'

  = f.button :submit
